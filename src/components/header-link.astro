---
export interface Props {
  label: string;
  href: string;
  external?: boolean;
  isActive?: boolean;
}

const { label, href, external = false, isActive = false } = Astro.props;
---

<a
  href={href}
  class={`font-mono inline-block cursor-pointer transition-all duration-200 px-2 py-1 rounded ${
    isActive
      ? "text-primary bg-primary/10"
      : "text-foreground hover:text-primary hover:bg-primary/5"
  }`}
  target={external ? "_blank" : undefined}
>
  <span>[</span>{label}<span>]</span>
</a>
