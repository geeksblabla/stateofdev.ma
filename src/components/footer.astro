---
import Logo from "../assets/logo.svg?raw";
import { website } from "@/website";

const communityLinks = [
  { label: "geeksblabla.community", href: "https://geeksblabla.community" },
  { label: "stateofdev.ma", href: "https://stateofdev.ma" },
  {
    label: "awesome-morocco.dev",
    href: "https://github.com/geeksblabla/awesome-morocco"
  },
  { label: "Join the team", href: "https://tally.so/r/meqj6E" }
];

const socialLinks = [
  { label: "Youtube", href: website.youtube },
  { label: "Linkedin", href: website.linkedin },
  { label: "Facebook", href: website.facebook },
  { label: "X (Previously Twitter)", href: website.twitter },
  { label: "Instagram", href: website.instagram },
  { label: "Github", href: website.github }
];
---

<footer class="mt-24 border-t border-border bg-background">
  <div
    class="mx-auto grid max-w-screen-xl gap-y-8 gap-x-12 px-4 py-12 sm:px-6 md:grid-cols-2 lg:grid-cols-4 xl:px-8"
  >
    <div class="md:col-span-2 flex flex-col justify-between">
      <div>
        <div class="mb-6 flex h-10 items-center space-x-2">
          <Fragment set:html={Logo} />
        </div>
        <div class="text-muted-foreground max-w-sm mb-6">
          Participate and let us know what working in tech really looks like in
          Morocco üá≤üá¶
        </div>
      </div>
    </div>

    <div>
      <h3
        class="mb-4 text-sm font-semibold uppercase tracking-wider text-foreground"
      >
        Community
      </h3>
      <ul class="space-y-2 font-mono">
        {
          communityLinks.map((link) => (
            <li>
              <a
                class="inline-block cursor-pointer transition-all duration-200 px-2 py-1 rounded -ml-2 text-muted-foreground hover:text-primary hover:bg-primary/5"
                href={link.href}
                target="_blank"
                rel="noopener noreferrer"
              >
                <span>[{link.label}]</span>
              </a>
            </li>
          ))
        }
      </ul>
    </div>

    <div>
      <h3
        class="mb-4 text-sm font-semibold uppercase tracking-wider text-foreground"
      >
        Links
      </h3>
      <ul class="space-y-2 font-mono">
        {
          socialLinks.map((link) => (
            <li>
              <a
                class="inline-block cursor-pointer transition-all duration-200 px-2 py-1 rounded -ml-2 text-muted-foreground hover:text-primary hover:bg-primary/5"
                href={link.href}
                target="_blank"
                rel="noopener noreferrer"
              >
                <span>[{link.label}]</span>
              </a>
            </li>
          ))
        }
      </ul>
    </div>
  </div>

  <div class="border-t border-border">
    <div
      class="mx-auto flex max-w-screen-xl flex-col gap-y-4 px-4 py-6 text-center text-sm text-muted-foreground sm:px-6 lg:flex-row lg:justify-between lg:text-left xl:px-8"
    >
      <p>Made with ‚ù§Ô∏è by Geeksblabla Team</p>
      <p>
        ¬© {new Date().getFullYear()} Geeksblabla | All Rights Reserved
      </p>
    </div>
  </div>
</footer>
